{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Predict API",
    "description": "Satellite orbit prediction",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "station.local:3000",
  "basePath": "/api/v1",
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Get metadata about the predict process.",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/satellites": {
      "get": {
        "summary": "Get a list of satellites in the predict database.",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/satellites/{name}": {
      "get": {
        "summary": "Get information about a specific satellite.",
        "parameters": [
          {
            "name": "name",
            "required": true,
            "type": "string",
            "in": "path",
            "description": "The name of the satellite."
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "satellites/{name}/doppler": {
      "get": {
        "summary": "Get dopper information about a specific satellite.",
        "parameters": [
          {
            "name": "name",
            "required": true,
            "type": "string",
            "in": "path",
            "description": "The name of the satellite."
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/satellites/{name}/tle": {
      "get": {
        "summary": "Get the Keplerian information (tle) about a specific satellite.",
        "parameters": [
          {
            "name": "name",
            "required": true,
            "type": "string",
            "in": "path",
            "description": "The name of the satellite."
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/satellites/{name}/position": {
      "get": {
        "summary": "Get current position information about a specific satellite.",
        "parameters": [
          {
            "name": "name",
            "required": true,
            "type": "string",
            "in": "path",
            "description": "The name of the satellite."
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/satellites/{name}/predict": {
      "get": {
        "summary": "Get orbit prediction for a specific satellite.",
        "parameters": [
          {
            "name": "name",
            "required": true,
            "type": "string",
            "in": "path",
            "description": "The name of the satellite."
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/satellites/{name}/predict/{start}": {
      "get": {
        "summary": "Get orbit prediction for a specific satellite.",
        "parameters": [
          {
            "name": "name",
            "required": true,
            "type": "string",
            "in": "path",
            "description": "The name of the satellite."
          },
          {
            "name": "start",
            "required": true,
            "type": "string",
            "in": "path",
            "description": "The start time for the requested prediction."
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  }
}